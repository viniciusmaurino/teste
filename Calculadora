import javax.swing.JOptionPane;

public class Soma2 {

	public static void main(String[] args) {
		
		String a,b;
		int x,y; // precisa dessas variáveis para receber a conversão de String para Int. Ou então coloca o JOption Input no parâmetro do parseInt direto
		a = JOptionPane.showInputDialog("Digite o primeiro número: "); // tudo lido aqui é String
		b = JOptionPane.showInputDialog("Digite o segundo número: ");
		x = Integer.parseInt(a);
		y = Integer.parseInt(b);
		JOptionPane.showMessageDialog(null, "A soma de " + x + " e " + y + " é: " + (x+y));
		System.exit(0);

	}

}
